{
  "templateMeta": {
    "name": "view-risk-factor",
    "title": "View Risk Factor",
    "category": "riskModel"
  },
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Container",
      "color": "accent",
      "spacing": "large",
      "items": [
        {
          "type": "TextBlock",
          "text": "{{ data.model }} - {{ data.factor }}",
          "size": "large"
        }
      ]
    },
    {
      "type": "Container",
      "spacing": "large",
      "items": [
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Model",
              "value": "{{ data.model }}"
            },
            {
              "title": "Factor",
              "value": "{{ data.factor }}"
            },
            {
              "title": "Data location",
              "value": "{{ data.rankings.namespace }}.{{ data.rankings.model }}.{{ data.rankings.property }}"
            },
            {
              "title": "Type",
              "value": "{{ data.registry.type }}"
            },
            {
              "showWhen": "data.registry.type === 'constant'",
              "title": "Constant",
              "value": "{{ data.registry.score }}"
            },
            {
              "showWhen": "data.registry.type === 'options'",
              "title": "Default",
              "value": "{{ data.registry.default }}"
            }
          ]
        },
        {
          "showWhen": "data.registry.type === 'options'",
          "type": "MarkupTable",
          "arrayPath": "data.registry.options",
          "columns": [
            {
              "title": "Type",
              "value": "{{ item.type }}"
            },
            {
              "title": "Criteria",
              "value": "{{ item.readableCriteria }}"
            },
            {
              "title": "Score",
              "value": "{{ item.score }}"
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Cancel",
      "title": "Close"
    },
    {
      "type": "Action.PushCard",
      "title": "Edit",
      "stateMachineName": "riskModel_editRiskFactor_1_0",
      "input": {
        "model": "$.model",
        "factor": "$.factor"
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}
